<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dylan.dao.VisitorDao">

    <insert id="addVisitor" useGeneratedKeys="false" keyProperty="id" >
        insert into T_VISITOR values(VISTOR_SEQ.nextval,#{name},#{password})
    </insert>

    <select id="queryVisitorBy_name" resultMap="visitorMap">
        select * from T_VISITOR where V_NAME=#{name} and ROWNUM=1
    </select>
    <select id="queryVisitor" resultMap="visitorMap">
        select * from T_VISITOR where V_NAME=#{name} and V_PASSWORD=#{password}
    </select>

    <resultMap id="visitorMap" type="Visitor">
        <id property="id" column="V_ID"/>
        <result property="name" column="V_NAME"/>
        <result property="password" column="V_PASSWORD"/>
    </resultMap>
</mapper>